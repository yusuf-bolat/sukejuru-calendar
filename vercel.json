{
  "version": 2,
  "name": "sukejuru-calendar",
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/health$", "dest": "/api/health" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/login", "dest": "/public/login.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
